{% extends "_layout.twig" %}

{% block content %}
    <section id="skills">
        <h1>{{ page.title }}</h1>
        <ul class="skill-list">
            {% for skill in page.skills|default([]) %}
                <li>
                    <p class="skill-name">{{ skill.title }}</p>
                    {% if skill.level %}
                        <span class="skill-level">{{ skill.level }}</span>
                    {% endif %}
                </li>
            {% else %}
                <li class="empty-state">Voeg eerst skills toe in ProcessWire.</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
