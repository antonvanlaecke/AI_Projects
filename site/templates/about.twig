{% extends "_layout.twig" %}

{% block content %}
    <section id="about">
        <h1>{{ page.title }}</h1>
        {{ page.body }}
        {% if page.download %}
            <p><a class="primary-cta" href="{{ page.download.url }}">{{ page.download.title|default('Download CV') }}</a></p>
        {% endif %}
    </section>
{% endblock %}
